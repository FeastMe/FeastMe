{% extends 'base.j2' %}
{% block content %}

<html>
<body>
    <div>
        <h1>Editing Food</h1>
        <table>
            {% if food %}
                <thead>
                    <tr>
                        {% for key in food[0].keys() %}
                            <th>{{ key }}</th>
                        {% endfor %} 
                    </tr>
                <thead>
                <tbody>
                    {% for item in food %}
                    <tr>
                        {% for key in item.keys() %}
                            <td>{{ item[key] }}</td> 
                        {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

{# Citation for creating a form for CRUD operations in Jinja:
Date: 11/10/2022
Sourced from GitHub Reposotiry osu-cs-340-ecampus/flask-starter-app
URL: https://github.com/osu-cs340-ecampus/flask-starter-app/blob/master/bsg_people_app/templates/edit_people.j2 #}

        {% if orders %}
        <div id="edit">
            <form id="editFood" action="/edit_food/{{food[0].food_id}}" method="post">
                <h3>Edit Food</h3>
                <fieldset>
                    <input type="hidden" value="{{food[0].food_id}}" id="food_id" name="food_id" required>
                    
                    <label for="order_id">Order ID:</label>
                    <select name="order_id" id="order_id">
                        {% for order in orders %}
                            <option value="{{ order.order_id }}" {% if order.order_id == food[0].order_id %} selected = "selected" {% endif %}>{{ order.order_id }} </option>
                        {% endfor %}
                    </select>

                    
                    <label for="made_by">Made by:</label>
                    <select name="made_by" id="made_by">
                        {% for food_creator in food_creators %}
                            <option value="{{ food_creator.account_id }}" {% if food_creator.account_id == food[0].made_by %} selected = "selected" {% endif %} >{{ food_creator.account_id }} </option>
                        {% endfor %}
                    </select>
                    
                    <label for="food_name">Food name:</label>
                    <input type="text" value="{{food[0].food_name}}" id="food_name" name="food_name" required>
                    
                    <br><br>

                    <label for="description">Description:</label>
                    <input type="text" value="{{food[0].description}}" id="description" name="description" required>

                    <label for="is_vegan">Is vegan:</label>
                    <select name="is_vegan" id="is_vegan">
                        <option value="Yes" {% if food[0].is_vegan == "Yes" %} selected = "selected" {% endif %}>Yes</option>
                        <option value="No"  {% if food[0].is_vegan == "No" %} selected = "selected" {% endif %}>No</option>
                    </select>

                    <label for="is_vegetarian">Is vegetarian:</label>
                    <select name="is_vegetarian" id="is_vegetarian">
                        <option value="Yes"  {% if food[0].is_vegetarian == "Yes" %} selected = "selected" {% endif %}>Yes</option>
                        <option value="No" {% if food[0].is_vegetarian == "No" %} selected = "selected" {% endif %}>No</option>
                    </select>

                    <label for="price">Price:</label>
                    <input type="number" step="0.01" min=0 value="{{food[0].price}}" id="price" name="price" required>
                
                    <br><br>

                    <input type="submit" value="Save" name="Edit_Food" class="button">
                    <a href='/foods'><input class="button" type="button" value="Cancel"></a>
                </fieldset>                   
            </form>
{% endif %}
</html>
{% endblock %}