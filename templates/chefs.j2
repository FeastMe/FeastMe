{% extends 'base.j2' %}
{% block content %}

<h1>Chefs</h1>
<table>
{% if chefs and unassigned_chefs%}
    <thead>
        <tr>
            {% for attribute in chefs[0].keys() %}
                <th> {{ attribute }} </th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for item in chefs %}
        <tr>
            {% for key in item.keys() %}
                <td>{{ item[key] }} </td>
            {% endfor %}
                <td><a href="edit_chef/{{ item.account_id }}">Edit</a></td>
                <td><a href="delete_chef/{{ item.account_id }}">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{# Date: 11/17/2022; Source from GitHub Reposotiry osu-cs-340-ecampus/flask-starter-app; URL: https://github.com/osu-cs340-ecampus/flask-starter-app/blob/master/bsg_people_app/templates/edit_people.j2 #}
<h3>Add Chef</h3>
<div id="add">
    <form id="addChef" action="/add_chef/" method="post">
        <fieldset>
            <label for="chef_id">Chef's account id:</label>
            <select name="chef_id" id="chef_id">
                {% for chef in unassigned_chefs %}
                    <option value="{{ chef.account_id }}">{{ chef.account_id }}</option>
                {% endfor %}
            </select>

            <label for="cert_number">cert_number:</label>
            <input type="text" id="cert_number" name="cert_number" required>

            <label for="specialty">specialty:</label>
            <input type="text" id="specialty" name="specialty" required>    
            
            <input type="submit" value="Submit" name="Add_Chef" class="button" type="button">
        </fieldset>
    </form>

{% elif chefs %}
    <thead>
        <tr>
            {% for attribute in chefs[0].keys() %}
                <th> {{ attribute }} </th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for item in chefs %}
        <tr>
            {% for key in item.keys() %}
                <td>{{ item[key] }} </td>
            {% endfor %}
                <td><a href="edit_chef/{{ item.account_id }}">Edit</a></td>
                <td><a href="delete_chef/{{ item.account_id }}">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>

<h3>Add Chef</h3>

</table>
<h4>All chef accounts have been accounted for.  If you want to add another chef, first to go the Accounts tab above and create a chef account.</h4>

{% else %}
<h4>Please create accounts first.</h4>
{% endif %}
{% endblock %}
